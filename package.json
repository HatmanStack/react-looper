{
  "name": "looper",
  "version": "1.0.0",
  "private": true,
  "workspaces": ["frontend"],
  "scripts": {
    "start": "cd frontend && expo start",
    "android": "cd frontend && expo start --android",
    "ios": "cd frontend && expo start --ios",
    "web": "cd frontend && expo start --web",
    "build:web": "cd frontend && expo export:web",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "cd frontend && npm run lint",
    "lint:fix": "cd frontend && npm run lint:fix",
    "typecheck": "cd frontend && npm run typecheck",
    "check": "npm run lint && npm run typecheck && jest --passWithNoTests --ci --runInBand --forceExit",
    "format": "prettier --write \"frontend/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"frontend/**/*.{ts,tsx,json,md}\""
  },
  "jest": {
    "preset": "jest-expo",
    "roots": [
      "<rootDir>/frontend"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(?:jest-)?react-native|@react-native(?:-community)?|expo(?:nent)?|@expo(?:nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg|react-native-paper|react-native-vector-icons|react-native-safe-area-context)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/e2e/",
      "/__fixtures__/",
      "navigation.test.tsx",
      "App.test.tsx"
    ],
    "setupFiles": [
      "<rootDir>/frontend/jest.mocks.js"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-native/extend-expect",
      "<rootDir>/frontend/jest.setup.js"
    ],
    "moduleNameMapper": {
      "^@components/(.*)$": "<rootDir>/frontend/src/components/$1",
      "^@screens/(.*)$": "<rootDir>/frontend/src/screens/$1",
      "^@services/(.*)$": "<rootDir>/frontend/src/services/$1",
      "^@store/(.*)$": "<rootDir>/frontend/src/store/$1",
      "^@utils/(.*)$": "<rootDir>/frontend/src/utils/$1",
      "^@types/(.*)$": "<rootDir>/frontend/src/types/$1",
      "^@constants/(.*)$": "<rootDir>/frontend/src/constants/$1",
      "^@theme/(.*)$": "<rootDir>/frontend/src/theme/$1",
      "^@expo/vector-icons$": "<rootDir>/frontend/__mocks__/@expo/vector-icons.js",
      "^@expo/vector-icons/(.*)$": "<rootDir>/frontend/__mocks__/@expo/vector-icons.js",
      "^react-native-vector-icons/(.*)$": "<rootDir>/frontend/__mocks__/@expo/vector-icons.js"
    }
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "react": "19.1.0",
    "react-native": "0.81.5"
  },
  "devDependencies": {
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^29.5.12",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-expo": "^54.0.13",
    "prettier": "^3.6.2",
    "react-test-renderer": "19.1.0"
  }
}
